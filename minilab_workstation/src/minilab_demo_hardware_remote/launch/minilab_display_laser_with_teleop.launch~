<?xml version="1.0"?>

<!-- Launch this command on the hardware robot before : roslaunch minilab_launch minilab_driver_hokuyo.launch -->

<launch>
	<node pkg="minilab_teleop" type="keyboard_teleop_ZQSD" name="keyboard_teleop_ZQSD"  output="screen">
		<param name="scale_linear" value="1.2" type="double"/>
		<param name="scale_angular" value="1.5" type="double"/>
 		<remap from="keyboard_teleop_ZQSD/cmd_vel" to="cmd_vel"/>
	</node>
	
	<include file="$(find minilab_launch)/launch/minilab_state_publisher.launch" />
	
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find minilab_demo_simulation)/laser.rviz" />
</launch>
